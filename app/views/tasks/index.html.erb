<h1>タスク一覧</h1>
<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  
   <% if @tasks.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>ステータス</th>
          <th>コンテンツ</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= link_to task.id, task %></td>
            <td><%= task.status %></td>
            <td><%= task.content %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
  
  <div>
    <%= paginate @tasks%>
  </div>
  
<% else %>
<% end %><%# elseの終わり %>

<%= link_to '新規タスクの作成', new_task_path, class: "btn btn-primary" %>


